<odoo>

  <!-- Curso (Action-List-Form)-->
  <record id="curso_action" model="ir.actions.act_window">
    <field name="name">Cursos</field>
    <field name="res_model">academia.curso</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="curso_view_list" model="ir.ui.view">
    <field name="name">academia.curso.list</field>
    <field name="model">academia.curso</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="creditos" />
        <field name="profesor_id" />
        <field name="matricula_ids" />
      </list>
    </field>
  </record>

  <record id="curso_view_form" model="ir.ui.view">
    <field name="name">academia.curso.form</field>
    <field name="model">academia.curso</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="creditos" />
            <field name="profesor_id" />
            <field name="matricula_ids" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

