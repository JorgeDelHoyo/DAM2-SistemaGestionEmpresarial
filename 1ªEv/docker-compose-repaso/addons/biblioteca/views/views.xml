<odoo>

  <!-- Actions ventana libros -->
  <record id="action_ventana_libros" model="ir.actions.act_window">
    <field name="name">Libros</field>
    <field name="res_model">biblioteca.libro</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- List Activityview(tree) de libros -->
  <record id="view_libro_list" model="ir.ui.view">
    <field name="name">biblioteca.libro.list</field>
    <field name="model">biblioteca.libro</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="autor_id" />
        <field name="editorial_id" />
        <field name="etiqueta_id" widget="many2many_etiquetas" options="{'color-field': 'color'}" />
        <field name="genero" />
        <field name="precio" />
        <field name="activo" />
      </list>
    </field>
  </record>


  <!-- Form view libros -->
  <record id="view_libros_form" model="ir.ui.view">
    <field name="name">model_name.view.form</field>
    <field name="model">biblioteca.libro</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name" />
              <field name="autor_id" />
              <field name="editorial_id" />
              <field name="genero" />
            </group>
            <group>
              <field name="precio" />
              <field name="activo" />
            </group>
          </group>
          <group>
            <field name="descripcion" />
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <!-- Action ventana socios -->
  <record id="action_ventana_socios" model="ir.actions.act_window">
    <field name="name">Socios</field>
    <field name="res_model">biblioteca.socio</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Action vista socios-->
  <record id="view_socio_list" model="ir.ui.view">
    <field name="name">biblioteca.socio.list</field>
    <field name="model">biblioteca.socio</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="telefono" />
        <field name="dni" />
      </list>
    </field>
  </record>

  <!-- Vista formulario socios-->
  <record id="view_socio_form" model="ir.ui.view">
    <field name="name">biblioteca.socio.form</field>
    <field name="model">biblioteca.socio</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="telefono" />
            <field name="dni" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action prestamos-->
  <record id="action_ventana_prestamos" model="ir.actions.act_window">
    <field name="name">Prestamos</field>
    <field name="res_model">biblioteca.prestamo</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Lista prestamos-->
  <record id="view_prestamo_list" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.list</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <list>
        <field name="libro_id" />
        <field name="socio_id" />
        <field name="fecha_inicio" />
        <field name="fecha_fin" />
      </list>
    </field>
  </record>

  <!-- Form prestamos-->
  <record id="view_prestamo_form" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.form</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="libro_id" />
              <field name="socio_id" />
            </group>
            <group>
              <field name="fecha_inicio" />
              <field name="fecha_fin" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action editorial-->
  <record id="action_ventana_editorial" model="ir.actions.act_window">
    <field name="name">Editoriales</field>
    <field name="res_model">biblioteca.editorial</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- List editorial-->
  <record id="view_editorial_list" model="ir.ui.view">
    <field name="name">biblioteca.editorial.list</field>
    <field name="model">biblioteca.editorial</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="pais" />
      </list>
    </field>
  </record>

  <!-- Form editorial-->
  <record id="view_editorial_form" model="ir.ui.view">
    <field name="name">biblioteca.editorial.list</field>
    <field name="model">biblioteca.editorial</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="pais" />
            <field name="website" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action etiquetas-->
  <record id="action_ventana_etiquetas" model="ir.actions.act_window">
    <field name="name">Etiquetas</field>
    <field name="res_model">biblioteca.etiqueta</field>
    <field name="view_mode">list,form</field>
  </record>


  <!-- MenuItem-->
  <menuitem id="menu_biblioteca_root" name="Biblioteca"/>
  <menuitem id="menu_biblioteca_gestion" name="Gestion" parent="menu_biblioteca_root"/>
  <menuitem
    id="menu_libros"
    name="Ver libros"
    action="action_ventana_libros"
    parent="menu_biblioteca_gestion"/>
  <menuitem
    id="menu_socios"
    name="Socios"
    action="action_ventana_socios"
    parent="menu_biblioteca_gestion"/>
  <menuitem
    id="menu_prestamos"
    name="Prestamos"
    action="biblioteca.action_ventana_prestamos"
    parent="menu_biblioteca_gestion"/>
  <menuitem
    id="menu_editorial"
    name="Editorial"
    action="action_ventana_editorial"
    parent="menu_biblioteca_gestion"/>
  <menuitem
    id="menu_etiquetas"
    name="Etiquetas"
    action="action_ventana_etiquetas"
    parent="menu_biblioteca_gestion"/>
</odoo>
