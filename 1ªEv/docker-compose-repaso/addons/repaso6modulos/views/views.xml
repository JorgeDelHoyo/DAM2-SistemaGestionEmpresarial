<odoo>

  <!-- Alumno -->
  <record id="alumno_action" model="ir.actions.act_window">
    <field name="name">Alumnos</field>
    <field name="res_model">repaso6modulos.alumno</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="alumno_view_list" model="ir.ui.view">
    <field name="name">repaso6modulos.alumno.list</field>
    <field name="model">repaso6modulos.alumno</field>
    <field name="arch" type="xml">
      <list>
        <field name="nombre" />
        <field name="fecha_nacimiento" />
        <field name="pasaporte" />
        <field name="fecha_caducidad_pasaporte" />
        <field name="edad" />
        <field name="compra_ids" />
      </list>
    </field>
  </record>

  <record id="alumno_view_form" model="ir.ui.view">
    <field name="name">repaso6modulos.alumno.form</field>
    <field name="model">repaso6modulos.alumno</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="nombre" />
            <field name="fecha_nacimiento" />
            <field name="pasaporte" />
            <field name="fecha_caducidad_pasaporte" />
            <field name="edad" />
            <field name="compra_ids" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

