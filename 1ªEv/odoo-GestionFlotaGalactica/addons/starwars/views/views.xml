<odoo>
  <!-- Bando -->
  <record id="bando_action" model="ir.actions.act_window">
    <field name="name">Bandos</field>
    <field name="res_model">starwars.bando</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="bando_view_list" model="ir.ui.view">
    <field name="name">starwars.bando.list</field>
    <field name="model">starwars.bando</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="description" />
      </list>
    </field>
  </record>

  <record id="bando_view_form" model="ir.ui.view">
    <field name="name">starwars.bando.form</field>
    <field name="model">starwars.bando</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="description" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

