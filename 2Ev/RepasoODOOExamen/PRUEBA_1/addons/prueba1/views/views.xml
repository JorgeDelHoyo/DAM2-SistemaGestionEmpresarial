    <odoo>
  <data>

    <record id="view_hijo_form" model="ir.ui.view">
        <field name="name">examen.hijo.form</field>
        <field name="model">examen.hijo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Datos Heredados">
                            <field name="name"/>
                            <field name="dni"/>
                            <field name="edad"/>
                            <field name="estado"/> </group>
                        <group string="Datos Propios">
                            <field name="curso"/>
                            <field name="empresa_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sindicalista_form" model="ir.ui.view">
        <field name="name">examen.sindicalista.form</field>
        <field name="model">examen.sindicalista</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Datos de la Persona (Delegados)">
                            <field name="name"/>
                            <field name="dni"/>
                            <field name="estado"/> 
                        </group>
                        <group string="Datos del Sindicato (Propios)">
                            <field name="nombre_sindicato"/>
                            <field name="cuota"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hijo" model="ir.actions.act_window">
        <field name="name">Alumnos (Hijo)</field>
        <field name="res_model">examen.hijo</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_sindicalista" model="ir.actions.act_window">
        <field name="name">Sindicalistas (Delegaci√≥n)</field>
        <field name="res_model">examen.sindicalista</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_examen_root" name="Examen Herencia"/>
    <menuitem id="menu_hijo" parent="menu_examen_root" action="action_hijo"/>
    <menuitem id="menu_sindicalista" parent="menu_examen_root" action="action_sindicalista"/>

  </data>
</odoo>
