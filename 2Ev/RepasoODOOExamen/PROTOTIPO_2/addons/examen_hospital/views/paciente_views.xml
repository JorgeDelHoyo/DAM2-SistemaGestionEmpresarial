<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paciente_view_list" model="ir.ui.view">
        <field name="name">paciente.view.list</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="edad" />
                <field name="gravedad" />
                <field name="hospital_id" />
            </list>
        </field>
    </record>

    <record id="paciente_view_form" model="ir.ui.view">
        <field name="name">paciente.view.form</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1><field name="name" /></h1>
                    </div>
                    <group string="Datos personales">
                        <field name="fecha_nacimiento" />
                        <field name="edad" />
                    </group>
                    <group string="Datos hospital">
                        <field name="gravedad" />
                        <field name="hospital_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="paciente_view_search" model="ir.ui.view">
        <field name="name">paciente.view.search</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <search>
                <field name="edad" />
                <filter name="groupGravedad" string="Agrupar por gravedad" context="{'group_by': 'gravedad'}" />
                <filter name="mayores_edad" string="Mayores de Edad" domain="[('edad', '>', 18)]" />
            </search>
        </field>
    </record>

    <record id="paciente_view_kanban" model="ir.ui.view">
        <field name="name">paciente.view.kanban</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div>
                            <h1><field name="name" /></h1>
                            <div>Edad: <field name="edad" /></div>
                            <div>Gravedad: <field name="gravedad" /></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="paciente_action" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">examen_hospital.paciente</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <menuitem
        id="paciente_menu"
        name="name"
        action="paciente_action"
        parent="root_menu"
        sequence="20"/>

</odoo>
