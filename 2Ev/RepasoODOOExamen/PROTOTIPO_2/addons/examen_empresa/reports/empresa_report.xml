<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_empresa" model="ir.actions.report">
        <field name="name">Reporte Empresa</field>
        <field name="model">examen_empresa.empresa</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">examen_empresa.empresa_report</field>
        <field name="report_file">examen_empresa.empresa_report</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_examen_empresa_empresa"/>
        <field name="binding_type">report</field>
    </record>

    <template id="empresa_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1><span t-field="o.name" /></h1>
                        <p><span t-field="o.cif" /></p>
                        <h4>Listado de Empleados</h4>
                        <t t-foreach="o.empleado_ids" t-as="paciente">
                            <p>Nombre: <span t-field="paciente.name" /></p>
                            <p>Edad: <span t-field="paciente.edad" /></p>
                            <p>Email: <span t-field="paciente.email" /></p>
                            <p>Puesto: <span t-field="paciente.puesto" /></p>
                            <p>Fecha Contrato: <span t-field="paciente.fecha_contrato" /></p>
                            <br></br>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
