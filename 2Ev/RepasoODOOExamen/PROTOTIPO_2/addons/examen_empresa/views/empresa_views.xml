<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="empresa_view_list" model="ir.ui.view">
        <field name="name">empresa.view.list</field>
        <field name="model">examen_empresa.empresa</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="cif" />
                <field name="empleado_ids" />
            </list>
        </field>
    </record>

    <record id="empresa_view_form" model="ir.ui.view">
        <field name="name">empresa.view.form</field>
        <field name="model">examen_empresa.empresa</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <header>
                        <button string="Descargar informe" name="%(examen_empresa.action_report_empresa)d" type="action" class="oe_highlight"/>
                    </header>
                    <div>
                        <h1>Nombre: <field name="name" /></h1>
                    </div>
                    <group>
                        <field name="cif" />
                        <field name="empleado_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="empresa_action" model="ir.actions.act_window">
        <field name="name">Empresas</field>
        <field name="res_model">examen_empresa.empresa</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="root_menu"
        name="Modelo Examen"
        sequence="10"/>
    
    <menuitem
        id="empresa_menu"
        name="Empresas"
        action="empresa_action"
        parent="root_menu"
        sequence="20"/>

</odoo>
