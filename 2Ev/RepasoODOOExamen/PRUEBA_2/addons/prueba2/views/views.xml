<odoo>
  <data>
    <record id="empresa_view_form" model="ir.ui.view">
      <field name="name">empresa.view.form</field>
      <field name="model">prueba2.empresa</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" />
              <field name="direccion" />
              <field name="sector" />
            </group>
            <notebook>
              <page string="Alumnos">
                <field name="alumno_ids" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="alumno_view_kanban" model="ir.ui.view">
      <field name="name">alumno.view.kanban</field>
      <field name="model">prueba2.alumno</field>
      <field name="arch" type="xml">
        <kanban default_group_by="estado_vital">
          <field name="estado_vital" />
          <field name="name" />
          <field name="empresa_id" />
          <field name="nota_media" />
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <strong><field name="name" /></strong>
                <div>Nota: <field name="nota_media" /></div>
                <div><field name="empresa_id" /></div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    
    <record id="alumno_view_form" model="ir.ui.view">
      <field name="name">alumno.view.form</field>
      <field name="model">prueba2.alumno</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name" />
              <field name="fecha_nacimiento" />
              <field name="edad" />
              <field name="estado_vital" />
              <field name="empresa_id" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="empresa_action" model="ir.actions.act_window">
      <field name="name">Empresas</field>
      <field name="res_model">prueba2.empresa</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="alumno_action" model="ir.actions.act_window">
      <field name="name">Alumnos</field>
      <field name="res_model">prueba2.alumno</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="root_menu" name="Prueba2"/>
    <menuitem
      id="empreas_menu"
      name="Empresa"
      action="empresa_action"
      parent="root_menu"
      sequence="1"/>
    <menuitem
      id="alumnos_menu"
      name="Alumnos"
      action="alumno_action"
      parent="root_menu"
      sequence="2"/>
