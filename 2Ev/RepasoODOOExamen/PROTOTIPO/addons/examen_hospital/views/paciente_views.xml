<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paciente_view_tree" model="ir.ui.view">
        <field name="name">paciente.view.tree</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="paciente_view_form" model="ir.ui.view">
        <field name="name">paciente.view.form</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="gravedad" />
                    </group>
                    <group>
                        <field name="hospital_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="paciente_view_search" model="ir.ui.view">
        <field name="name">paciente.view.search</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <search string="">
                <filter name="filtros_graves" string="Pacientes Graves" domain="[('gravedad', '=', 'grave')]" />
                <filter name="agrupar_Hosptial" string="Hospital" context="{'group_by': 'hospital_id'}" />
            </search>
        </field>
    </record>

    <record id="paciente_view_kanban" model="ir.ui.view">
        <field name="name">paciente.view.kanban</field>
        <field name="model">examen_hospital.paciente</field>
        <field name="arch" type="xml">
            <kanban  default_group_by="gravedad">
                <templates>
                    <t t-name="card">
                        <div>
                            <strong><field name="name" /></strong>
                            <div>Hospital: <field name="hospital_id" /></div>
                            <div>Estado: <field name="gravedad" /></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="paciente_action" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">examen_hospital.paciente</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <menuitem
        id="paciente_menu"
        name="Pacientes"
        action="paciente_action"
        parent="root_menu"
        sequence="20"/>
</odoo>