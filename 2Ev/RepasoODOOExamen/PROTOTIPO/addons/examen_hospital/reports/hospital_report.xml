<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_hospital" model="ir.actions.report">
        <field name="name">Informe del Hospital</field>
        <field name="model">examen_hospital.hospital</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">examen_hospital.report_hospital</field>
        <field name="report_file">examen_hospital.report_hospital</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_examen_hospital_hospital"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_hospital">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Hospital: <span t-field="o.name" /></h2>
                        <p><strong>Camas: </strong><span t-field="o.cantidad" /></p>

                        <h4>Pacientes Asignados</h4>
                        <table>
                            <thead>
                                <tr>
                                    <th>Nombre del Paciente</th>
                                    <ht>Gravedad</ht>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.paciente_ids" t-as="paciente">
                                    <tr>
                                        <td><span t-field="paciente.name" /></td>
                                        <td><span t-field="paciente.gravedad" /></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
