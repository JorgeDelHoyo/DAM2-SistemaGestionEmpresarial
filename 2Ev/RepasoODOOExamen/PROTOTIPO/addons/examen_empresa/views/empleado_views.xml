<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="empleado_view_list" model="ir.ui.view">
        <field name="name">empleado.view.list</field>
        <field name="model">examen_empresa.empleado</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="puesto" />
                <field name="empresa_id" />
                <field name="fecha_contrato" />
            </list>
        </field>
    </record>

    <record id="empleado_view_form" model="ir.ui.view">
        <field name="name">empleado.view.form</field>
        <field name="model">examen_empresa.empleado</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div>
                        <h1><field name="name" placeholder="Nombre del Empleado" /></h1>
                    </div>
                    <group>
                        <field name="empresa_id" />
                        <field name="puesto" />
                    </group>
                    <group>
                        <field name="fecha_contrato" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="empleado_view_calendar" model="ir.ui.view">
        <field name="name">empleado.view.calendar</field>
        <field name="model">examen_empresa.empleado</field>
        <field name="arch" type="xml">
            <calendar string="Contrataciones" date_start="fecha_contrato" color="name">
                <field name="name" />
            </calendar>
        </field>
    </record>

    <record id="empleado_view_kanban" model="ir.ui.view">
        <field name="name">empleado.view.kanban</field>
        <field name="model">examen_empresa.empleado</field>
        <field name="arch" type="xml">
            <kanban default_group_by="puesto">
                <templates>
                    <t t-name="card">
                        <div>
                            <strong>Nombre: </strong><field name="name" />
                            <div>Puesto: <field name="puesto" /></div>
                            <div>Empresa: <field name="empresa_id" /></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="empleado_view_search" model="ir.ui.view">
        <field name="name">empleado.view.search</field>
        <field name="model">examen_empresa.empleado</field>
        <field name="arch" type="xml">
            <search>
                <filter name="puesto" string="Agrupar por puesto" context="{'group_by': 'puesto'}" />
            </search>
        </field>
    </record>

    <record id="empleado_action" model="ir.actions.act_window">
        <field name="name">Empleados</field>
        <field name="res_model">examen_empresa.empleado</field>
        <field name="view_mode">list,form,kanban,calendar</field>
    </record>

    <menuitem
        id="empleado_menu"
        name="Empleados"
        action="empleado_action"
        parent="root_menu"
        sequence="20"/>

</odoo>
