<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_empresa" model="ir.actions.report">
        <field name="name">Informe de Empresa</field>
        <field name="model">repaso_examen.empresa</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">repaso_examen.report_empresa</field>
        <field name="report_file">repaso_examen.report_empresa</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_repaso_examen_empresa"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_empresa">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Empresa: <span t-field="o.nombre" /></h2>
                        <p><strong>CIF: </strong><span t-field="o.cif" /></p>
                        <p><strong>Multinacional: </strong><span t-field="o.es_multinacional" /></p>
                    
                        <h3>Personal asignado</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Rol</th>
                                    <th>Etapa</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.personal_ids" t-as="p">
                                    <td><span t-field="p.nombre" /></td>
                                    <td><span t-field="p.rol" /></td>
                                    <td><span t-field="p.etapa_vida" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
